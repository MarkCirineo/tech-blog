<div class="row d-flex justify-content-around">

  <div class="col-md-5 login-card text-light">
    <h2 class="text-center">Login</h2>

    <form class="form login-form">
      <div class="d-flex align-items-end flex-column input-fields">
        <div class="form-group">
          <label for="email-login">email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
      </div>
      <div class="form-group d-flex justify-content-center">
        <button class="btn login-button" type="submit">login</button>
      </div>
    </form>
  </div>
  
  <div class="col-md-5 signup-card text-light">
    <h2 class="text-center">Signup</h2>

    <form class="form signup-form">
      <div class="signup-form d-flex align-items-end flex-column input-fields">
        <div class="form-group">
          <label for="name-signup">name:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
      </div>
      <div class="form-group d-flex justify-content-center">
        <button class="btn signup-button" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
